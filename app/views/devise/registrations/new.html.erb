<div class="seven" id="signup">

  <h4>Sign up</h4>
  <div id="signup-tag">Let's get this party started.</div>

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="row">
    <div class="seven columns" id="signup-fields">
      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation %>
      <div><%= f.submit "Sign up", :class => 'button radius'%></div>
      
      <% end %>

      <ul id="links">
        <%= render "devise/shared/links" %>
      </ul>
    </div>

    <div class="five columns" id="social-signup">
      <strong>Or, sign up using</strong>
      <button class="button radius" id="facebook">Facebook</button>
      <button class="button radius" id="twitter">Twitter</button> 
    </div>
  </div>
  
  <div id="got-account">Got an account? <%= link_to "Login", new_session_path(resource_name) %></div>
</div>
