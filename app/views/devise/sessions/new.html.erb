<div class="seven" id="signup">
  <h4>Login</h4>
  <div id="signup-tag">Knock, knock. Who's there?</div>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>


  <div class="row">
    <div class="seven columns" id="signup-fields">
  
      <%= f.label :email %>
      <%= f.email_field :email %>
  
      <%= f.label :password %>
      <%= f.password_field :password %>

    <% if devise_mapping.rememberable? -%>
      <div id="remember-me"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
    <% end -%>

    <div><%= f.submit "Sign in", :class => 'button radius'%></div>
  <% end %>
  </div>

  <div class="five columns" style="padding: 2em;">
    <%= render "devise/shared/links" %>
  </div>
</div>