/* -----------------------------------------
   Shared Styles
----------------------------------------- */

body {
  font-family: "Helvetica Neue", "HelveticaNeue", Helvetica, Arial, "Lucida Grande", sans-serif;
  line-height: 1.4;
}

.button { text-shadow: none !important; }

h6 { font-weight: bold; }

ul {
  margin: 0 0 0 1.6em;

  li {
    list-style: disc;
    padding: 0;
    margin: .2em;

    &#icon-embed {
      background: url(/assets/icons/edit-code.png) no-repeat 0 3px;
    }

    &#icon-editslide {
      background: url(/assets/icons/pencil-small.png) no-repeat 0 3px;
    }

    &#icon-slideshows {
      background: url(/assets/icons/slides.png) no-repeat 0 3px;
    }

    &#icon-facebook {
      background: url(/assets/icons/balloon-facebook-left.png) no-repeat 0 3px;
    }

    &#icon-twitter {
      background: url(/assets/icons/balloon-twitter-left.png) no-repeat 0 3px;
    }

    &#icon-url {
      background: url(/assets/icons/chain.png) no-repeat 0 3px;
    }

    &#icon-date {
      background: url(/assets/icons/calendar-medium.png) no-repeat 0 3px;
    }
  }
}

hr {
  display: block;
  height: 1px;
  border: 0;
  border-top: 1px solid #eee;
  margin: 1em 0;
  padding: 0;
}

p {
  font-size: 14px;
  line-height: 1.5;
}

div.panel {
  background: #f9f9f9;
  border: 1px solid #eee;
  padding: 10px;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  border-radius: 2px;

  .save-mask {
    z-index: 99;
    position: absolute;
    width: 100%;
    height: 100%;
    margin: -10px;
    background: rgba(10, 10, 10, .2) url(<%= asset_path "spinner.gif" %>) no-repeat 50% 50%;
    -webkit-border-radius: 2px;
    -moz-border-radius: 2px;
    border-radius: 2px;
  }
}

div.panel .columns {
  padding: 0;
}

#main {
  margin-bottom: 4em;
}


/* -----------------------------------------
   Button Style Overrides
----------------------------------------- */

.success {
  text-shadow: 0 1px 0 #666;
}


/* -----------------------------------------
   Header Content
----------------------------------------- */

header {
  background: #444;
  color: #aaa;
  font-weight: bold;
  margin-bottom: 2em;

  h3 {
    color: #fff;
    float: left;
    margin: .6em 0 0 .8em;
  }

  a, a:visited {
    color: #fff;
  }

  #tagline {
    float: left;
    color: #ccc;
    margin: 1.7em 0 0 1em;
  }

  .login {
    margin: 1em 0;
    text-align: right;
  }
  
  .signup {
    margin-left: .5em;
  }
}


/* -----------------------------------------
   Homepage
----------------------------------------- */

#banner {
  background: #f6f6f6;
  color: #666;
  padding: 20px;
  margin-bottom: 3.4em;
  text-shadow: 0 1px 0 #fff;
  border: 1px solid #eee;
  overflow: hidden;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  border-radius: 2px;

  h3 {
    color: #444;
    margin-bottom: .3em;
  }

  #screenshot {
    position: relative;
    
    img {
      position: absolute;
    }
  }

  #banner-signup {
    margin-top: 1em;

    .button {
      margin-right: 1em;
    }
  }
}

#features {
  margin-bottom: 2em;
  
  img {
    -webkit-border-radius: 2px;
    -moz-border-radius: 2px;
    border-radius: 2px;
  }

  h5 { margin-bottom: .3em; }
}


/* -----------------------------------------
   Slideshows List Page
----------------------------------------- */

.slideshows {
  h3#my-slideshows {
    float: left;
    margin: .2em .5em 0;
    padding: 0;
  }

  #grid {
    margin: 2em 0 3em;

    h6 { margin: 0 0 3px; padding: 0; }

    .pubdate {
      color: #999;
      font-size: 13px;
      margin-bottom: 1.5em;
    }
  }

  .crop {
    max-height: 120px;
    margin-bottom: 5px;

    .actions {
      margin: 10px 20px;
      width: auto;
      padding: .3em;
      left: -5px;

      a, a:visited {
        padding: .3em 1em;
        font-size: 13px;
      }
    }

    &:hover .actions {
      visibility: visible;
    }
  }
}


/* -----------------------------------------
   Slideshow Title & Description
----------------------------------------- */

#slideshow-info {
  border: 1px solid #eee;
  border-bottom: 0;
  padding: 20px;

  &:hover #slideshow-actions {
    visibility: visible;
    top: 12px;
    left: 15px;
  }

  .ss-title { margin: 0 5px 7px; }

  .ss-desc { margin: 0 5px; }
}


/* -----------------------------------------
   Hide stuff in edit-mode
----------------------------------------- */

.editing #slideshow-actions { visibility: hidden !important; }
.editing .slide-actions { visibility: hidden !important; }
.editing .ctrl-top {
  opacity: .3;
  .ctrl-left, .ctrl-right {
    cursor: default !important;
    &:hover {
      opacity: 1 !important;
      filter: alpha(opacity=100) !important;
    }
  }
}


/* -----------------------------------------
   Slide Content
----------------------------------------- */

.actions {
  position: absolute;
  left: 0;
  padding: 1em;
  visibility: hidden;
  background: rgba(0,0,0,.7);
  -webkit-border-top-right-radius: 2px;
  -webkit-border-bottom-right-radius: 2px;
  -moz-border-radius-topright: 2px;
  -moz-border-radius-bottomright: 2px;
  border-top-right-radius: 2px;
  border-bottom-right-radius: 2px;

  img { width: 12px; }

  a, a:visited {
    padding: .7em 1.4em;
    background: #666 no-repeat 50% 50%;
    color: #fff;
    -webkit-border-radius: 2px;
    -moz-border-radius: 2px;
    border-radius: 2px;
    background-size: 12px 14px;

    &.edit { background-image: url(<%= asset_path "icons/glyphicons_030_pencil.png" %>); }
    &.delete { background-image: url(<%= asset_path "icons/glyphicons_016_bin.png" %>); }
    &.new { background-image: url(<%= asset_path "icons/glyphicons_190_circle_plus.png" %>); }

    &.edit {
      &:hover {
        background-color: #ccc;
      }
    }

    &.delete {

      &:hover {
        background-color: #cc0000;
      }

      img {
        width: 10px;
        margin-bottom: -1px;
      }
    }

    &.new {
      &:hover {
      background-color: #66cc00;
      }
    }
  }

  ul {
    margin: 0;
    padding: 0;
  }

  li {
    list-style: none;
    float: left;
  }

  .has-tip {
    border-bottom: 0;
    cursor: pointer;
  }
}

.col-left {
  float: left;
  width: 25%;
  margin-right: 3%;
}

.col-left img {
  max-width: 100%;
}

.col-right {
  float: left;
  width: 72%;
}

#slideshow {
  position: relative;
  background: #f5f5f5;
  border: 1px solid #e7e7e7;
  text-shadow: 0 1px 0 #fff;
  -moz-box-shadow: 0 0 5px #eee;
  -webkit-box-shadow: 0 0 5px #eee;
  box-shadow: 0 0 5px #eee;

  h5 {
    margin: .3em 0 .5em 0;
    font-weight: bold;
  }

  .slide-actions {
    top: 20px;
  }
  &:hover .slide-actions {
    visibility: visible;
  }
}

.slide-body {
  padding: 20px;
}

.slide-dtim {
  color: #999;
  margin-bottom: 3px;
}

.slide-desc {
  color: #777;
  padding-bottom: 30px;

  a, a:visited {
    font-weight: bold;
  }
}

.crop {
  max-height: 150px;
  overflow: hidden;
  -webkit-border-radius: 2px;
  -moz-border-radius: 2px;
  border-radius: 2px;
}

#number {
  text-align: center;
  font-size: 12px;
  color: #999;
  padding: 1em;
}


/* -----------------------------------------
   Map
----------------------------------------- */

#map {
  background: #ffff66;
  position: relative;
  clear: both;
  margin: 0 -20px;
  overflow: hidden;
  height: 250px;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #fff;
}

#map:before {
  max-width: 103%;
  position: absolute;
  content: url(/assets/map-grad-top.png);
  z-index: 9999;
  overflow: hidden;
}


/* -----------------------------------------
   Arrows
----------------------------------------- */

.arrows {
  float: right;
  margin-top: .5em;

  span {
    background: #444;
    padding: 8px 7px 7px;
    color: #ccc;
    text-shadow: none;
    font-size: 13px;
  }

  a, a:visited {
    font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
    font-weight: 100;
    line-height: 0;
    opacity: 1;
    padding: 7px 15px;
    color: #fff;
    position: relative;

    &:hover {
      opacity: .8;
    }
  }
}

#arrow-left {
  -webkit-border-top-left-radius: 2px;
  -webkit-border-bottom-left-radius: 2px;
  -moz-border-radius-topleft: 2px;
  -moz-border-radius-bottomleft: 2px;
  border-top-left-radius: 2px;
  border-bottom-left-radius: 2px;
  background: #66cc00;
}

#arrow-right {
  -webkit-border-top-right-radius: 2px;
  -webkit-border-bottom-right-radius: 2px;
  -moz-border-radius-topright: 2px;
  -moz-border-radius-bottomright: 2px;
  border-top-right-radius: 2px;
  border-bottom-right-radius: 2px;
  background: #66cc00;
}

#arrow-left:before {
  position: absolute;
  top: 11px;
  left: 10px;
  content: "\2039";
  font-size: 40px;
}

#arrow-right:before {
  position: absolute;
  top: 11px;
  right: 10px;
  content: "\203A";
  font-size: 40px;
}


#credit {
  font-size: 12px;
  padding: 10px 0 0;
  color: #999;
  margin-bottom: -10px;
}

#credit a, #credit a:visited {
  color: #555;
}

#credit span { color: #ddd; }


/* -----------------------------------------
   Slide Edit
----------------------------------------- */

textarea { min-height: 220px; }

#allowed-html {
  margin-bottom: 1em;
  padding: 0 1em;
  font-size: 12px;
  color: #666;
}

a.image {
  overflow: hidden;
  position: relative;
  display: inline-block;
  line-height: 30px;

  // try to render hidden
  input {
    position: absolute;
    cursor: pointer;
    width: 300px;
    height: 100%;
    top: 0;
    right: 0;
    margin: 0;
    border: solid transparent;
    opacity: 0;
    filter: alpha(opacity=0);
    -moz-transform: translate(-300px, 0) scale(4);
    direction: ltr;
  }
}


/* -----------------------------------------
   Sidebar
----------------------------------------- */

#sidebar {
  overflow: hidden;

  ol {
    margin: 0;

    li {
      float: left;
      width: 47%;
      background: #f9f9f9;
      border: 1px solid #eee;
      padding: 10px;
      margin-bottom: 1em;
      list-style-position: inside;
      cursor: move;
      line-height: 1.2;
      font-size: 13px;
      -webkit-border-radius: 2px;
      -moz-border-radius: 2px;
      border-radius: 2px;
      height: 140px;
      overflow: hidden;

      h6 { margin: 0; padding: 0; }

      &:nth-child(odd) { margin-right: 1em; }

      &.active { border-width: 3px; border-color: #6c0; }
    }
  }

  #share-embed {
    margin: 0 0 3.5em 0;
    padding: 10px;
    border: 1px solid #eee;
    -webkit-border-radius: 3px;
    -moz-border-radius: 3px;
    border-radius: 3px;

    li {
      list-style: none;
      padding-left: 20px;
      margin: 0 0 5px;

      &:last-child {
        margin-bottom: 0;
      }
    }
  }

  #slideshow-edit {
    display: none;
  }

  #slide-edit {
    display: none;

    select {
      position: relative;
      padding: 6px;
      background: #fff;
      border: 1px solid #ccc;
      margin-bottom: 1em;
      font-size: 14px;
      -webkit-border-radius: 2px;
      -moz-border-radius: 2px;
      border-radius: 2px;

      &:before {
        content: "";
        position: absolute;
        top: 0;
        right: 0;
      }
    }

    .uploading {
      display: none;
      padding: 6px 4px;
      margin-top: -13px;
      margin-bottom: 12px;
      background: #00cc00;
      color: white;
      font-size: 12px;
      font-size: 1.2rem;
      font-weight: bold;
      -moz-border-radius-bottomleft: 2px;
      -webkit-border-bottom-left-radius: 2px;
      border-bottom-left-radius: 2px;
      -moz-border-radius-bottomright: 2px;
      -webkit-border-bottom-right-radius: 2px;
      border-bottom-right-radius: 2px;
    }
  }

  #slide-nav {}
}

#user-profile {
  margin-bottom: 1.5em;

  img {
    float: left;
    max-width: 50px;
    max-height: 50px;
    margin: -.5em 1em 0 .7em;
  }

  h6 {
    margin: 0 0 2px;
  }
}

#links {
  margin: 0 0 0 7px;

  li {
    list-style: none;
    padding-left: 23px;
    margin-bottom: 8px;
  }
}


/* -----------------------------------------
   Make footer sticky
----------------------------------------- */
html, body { height: 100%; }
#body-wrapper { min-height: 100%; height: auto !important; height: 100%; margin: 0 auto -60px; }
#footer-push { height: 60px; }
#footer {
  line-height: 59px;
  background: #eee;
  color: #999;
  text-shadow: 0 1px 0 #fff;
  border-top: 1px solid #ddd;
}


/* -----------------------------------------
   Clearfix
----------------------------------------- */

/* For modern browsers */
.cf:before,
.cf:after {
    content:"";
    display:table;
}

.cf:after {
    clear:both;
}

/* For IE 6/7 (trigger hasLayout) */
.cf {
    *zoom:1;
}
