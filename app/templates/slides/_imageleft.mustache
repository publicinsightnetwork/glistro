<!-- Left-aligned image slide -->
{{#editing}}
<div class="actions slide-actions">
  <ul>
    <li><a href="#" class="edit has-tip" title="Edit slide image, title and description" data-id="{{id}}"></a></li>
    <li><a href="#" class="delete has-tip" title="Delete this slide"></a></li>
    <li><a href="#" class="new has-tip" title="Add a new slide"></a></li>
  </ul>
</div>
{{/editing}}
<div class="slide-body image-left">
  <div class="col-left">
    <div class="crop"><img class="slide-image" src="{{image_url}}"/></div>
  </div>
  <div class="col-right">
    <h5 class="slide-title">{{title}}</h5>
    <div class="slide-dtim">June 30, 2012 at 3:34 p.m. Central</div>
    <div class="slide-desc">{{desc}}</div>
  </div>
</div>
